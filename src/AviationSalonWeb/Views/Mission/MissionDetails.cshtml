<div class="container text-center">
    <h1 class="display-4">Your aircrafts:</h1>

    <h2 class="mt-4">Selected Aircraft</h2>
    @foreach (var aircraft in Model.Item1)
    {
        <p>Aircraft Model: @aircraft.Model</p>
    }

    <h2 class="mt-4">Selected Weapons</h2>
    @foreach (var weapon in Model.Item2)
    {
        <p>Weapon Name: @weapon.Name</p>
        <p>Weapon Type: @weapon.Type</p>
    }

    <div class="mt-3">
        <a class="btn btn-primary" href="/mission/editcart">Edit</a>
        <a class="btn btn-success" href="/mission/checkout">Proceed to Checkout</a>
    </div>
</div>
