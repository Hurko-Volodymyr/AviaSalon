@{
    var orderItemCount = Model.OrderItems.Count;
}

<div class="container text-center">
    <h1 class="display-4">Your aircrafts:</h1>

    <h2 class="mt-4">Selected Aircraft</h2>
    @for (var i = 0; i < orderItemCount; i++)
    {
        var orderItem = Model.OrderItems[i];
        <p>Aircraft Model: @(orderItem.Aircraft?.Model ?? "N/A")</p>
        <p>Quantity: @orderItem.Quantity</p>

        <h3>Weapons</h3>
        @if (orderItem.Aircraft != null && orderItem.Aircraft.Weapons.Any())
        {
            @foreach (var weapon in orderItem.Aircraft.Weapons)
            {
                <p>Weapon Name: @weapon.Name</p>
                <p>Weapon Type: @weapon.Type</p>
            }
        }
        else
        {
            <p>No weapons selected</p>
        }
    }

    <div class="mt-3">
        <a class="btn btn-primary" href="/mission/editcart?orderId=@Model.OrderId">Edit</a>
        <a class="btn btn-success" href="/mission/checkout?orderId=@Model.OrderId">Proceed to Checkout</a>
    </div>
</div>
