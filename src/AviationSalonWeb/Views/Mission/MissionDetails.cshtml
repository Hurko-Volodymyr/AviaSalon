@model List<AircraftViewModel>

<div class="container text-center">
    <h1 class="display-4">@Localizer["Your Aircrafts"]:</h1>

    <div class="row mt-4">
        @foreach (var aircraftModel in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card mx-auto">
                    <div class="card-body">
                        <h2 class="card-title">@Localizer["Aircraft Model"]:</h2>
                        <h2 class="card-title">@aircraftModel.Model</h2>

                        <h3 class="mt-3">@Localizer["Weapons"]</h3>
                        @if (aircraftModel.Weapons != null && aircraftModel.Weapons.Any())
                        {
                            <ul>
                                @foreach (var weapon in aircraftModel.Weapons)
                                {
                                    <li>
                                        <p>@Localizer["Weapon Name"]: @weapon.Name</p>
                                        <p>@Localizer["Weapon Type"]: @weapon.Type</p>
                                    </li>
                                }
                            </ul>

                            <p>@Localizer["Total Weapons types Quantity"]: @aircraftModel.Weapons.Count</p>
                        }
                        else
                        {
                            <p>@Localizer["No weapons selected"]</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>


    <div class="mt-3">
        <form class="d-inline" method="post" action="@Url.Action("DeleteOrder", "Mission", new { orderId = ViewBag.OrderId })">
            <button type="submit" class="btn btn-danger">@Localizer["Cancel"]</button>
        </form>
        <a class="btn btn-success ml-2" href="/mission/checkout?orderId=@ViewBag.OrderId">@Localizer["Proceed to Checkout"]</a>
    </div>
</div>

