@using AviationSalon.WebUI.Models
@model CustomerInfoModel

<h1>Checkout</h1>

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactInformation">Contact Information:</label>
        <input asp-for="ContactInformation" class="form-control" />
        <span asp-validation-for="ContactInformation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserSecret">User Secret:</label>
        <input asp-for="UserSecret" class="form-control" />
        <span asp-validation-for="UserSecret" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
