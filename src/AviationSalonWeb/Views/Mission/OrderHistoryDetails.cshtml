@using AviationSalon.WebUI.Models
@model List<AircraftViewModel>

<div class="container text-center">
    <h1 class="display-4">Your Aircrafts:</h1>

    <div class="row mt-4">
        @foreach (var aircraftModel in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card mx-auto">
                    <div class="card-body">
                        <h2 class="card-title">Aircraft Model:</h2>
                        <h2 class="card-title">@aircraftModel.Model</h2>

                        <h3 class="mt-3">Weapons</h3>
                        @if (aircraftModel.Weapons != null && aircraftModel.Weapons.Any())
                        {
                            <ul>
                                @foreach (var weapon in aircraftModel.Weapons)
                                {
                                    <li>
                                        <p>Weapon Name: @weapon.Name</p>
                                        <p>Weapon Type: @weapon.Type</p>
                                    </li>
                                }
                            </ul>

                            <p>Total Weapons Quantity: @aircraftModel.Weapons.Count</p>
                        }
                        else
                        {
                            <p>No weapons selected</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <a class="btn btn-secondary" href="/mission/orderhistory?customerId=@ViewBag.CustomerId">Back</a>
    </div>
</div>
